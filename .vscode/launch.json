{
  "version": "0.2.0",
  "configurations": [
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "nugem help",
      "script": "${workspaceFolder}/exe/nugem --help",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "nugem ruby test without options",
      "script": "${workspaceFolder}/exe/nugem ruby test",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Fail nugem ruby with options before the gem type",
      "script": "${workspaceFolder}/exe/nugem -o /tmp --yes ruby test",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "nugem ruby test -o /tmp --yes",
      "script": "${workspaceFolder}/exe/nugem ruby test -o /tmp --yes",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "nugem jekyll test --private --tag=tag1",
      "script": "${workspaceFolder}/exe/nugem jekyll test --private --tag=tag1",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "demo ruby test",
      "script": "${workspaceFolder}/bin/demo ruby test",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "demo jekyll",
      "script": "${workspaceFolder}/bin/demo jekyll",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "build_run_demo",
      "script": "${workspaceFolder}/bin/build_run_demo",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
        "-I", "${workspaceRoot}/lib",
        "-I", "${workspaceRoot}/spec",
        "-P", "${workspaceRoot}/spec/**/*_spec.rb"
      ],
      "askParameters": false,
      "debugPort": "0",
      "name": "RSpec - all",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/rspec",
      "type": "rdbg",
    },
    {
      "args": [
        "-I", "${workspaceRoot}/lib",
        "-I", "${workspaceRoot}/spec",
        "${file}"
      ],
      "debugPort": "0",
      "name": "RSpec - active spec only",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/rspec",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [],
      "debugPort": "0",
      "name": "Debug current file with rdbg",
      "request": "launch",
      "script": "${file}",
      "type": "rdbg",
      "useBundler": true,
    },
  ]
}
