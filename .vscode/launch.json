{
  "version": "0.2.0",
  "configurations": [
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Run exe/nugem help",
      "script": "${workspaceFolder}/exe/nugem",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Run exe/nugem gem test without options",
      "script": "${workspaceFolder}/exe/nugem gem test",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Run exe/nugem gem test with options before the gem name",
      "script": "${workspaceFolder}/exe/nugem gem -o /tmp --yes test",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Run exe/nugem gem test with options after the gem name",
      "script": "${workspaceFolder}/exe/nugem gem test -o /tmp --yes",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Debug nugem jekyll test",
      "script": "${workspaceFolder}/exe/nugem jekyll test --out_dir=/tmp/nugem --private --tag=tag1",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Run bin/demo gem test",
      "script": "${workspaceFolder}/bin/demo gem test",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Run bin/demo jekyll",
      "script": "${workspaceFolder}/bin/demo jekyll",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "env": {
        "VO_DEBUGGING": "true"
      },
      "name": "Run bin/build_run_demo",
      "script": "${workspaceFolder}/bin/build_run_demo",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
        "-I", "${workspaceRoot}/lib",
        "-I", "${workspaceRoot}/spec",
        "-P", "${workspaceRoot}/spec/**/*_spec.rb"
      ],
      "askParameters": false,
      "debugPort": "0",
      "name": "RSpec - all",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/rspec",
      "type": "rdbg",
    },
    {
      "args": [
        "-I", "${workspaceRoot}/lib",
        "-I", "${workspaceRoot}/spec",
        "${file}"
      ],
      "debugPort": "0",
      "name": "RSpec - active spec only",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/rspec",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [],
      "debugPort": "0",
      "name": "Debug current file with rdbg",
      "request": "launch",
      "script": "${file}",
      "type": "rdbg",
      "useBundler": true,
    },
  ]
}
